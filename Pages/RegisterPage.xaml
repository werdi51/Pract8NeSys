<Page x:Class="_7.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация врача">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" >
            <TextBlock Text="Регистрация нового врача" Style="{StaticResource header}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" >
            <Label Content="Фамилия:"/>
            <TextBox x:Name="LastNameTextBox" />

            <Label Content="Имя:"/>
            <TextBox x:Name="NameTextBox" />

            <Label Content="Отчество:"/>
            <TextBox x:Name="MiddleNameTextBox"/>

            <Label Content="Специализация:"/>
            <ComboBox x:Name="SpecialisationComboBox">
                <ComboBoxItem Content="Терапевт"/>
                <ComboBoxItem Content="Хирург"/>
                <ComboBoxItem Content="Лор"/>
            </ComboBox>

            <Label Content="Пароль:"/>
            <PasswordBox x:Name="PasswordBox1" />

            <Label Content="Подтверждение пароля:"/>
            <PasswordBox x:Name="PasswordBox2"/>

            <TextBlock x:Name="MessageTextBlock"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Style="{StaticResource HorisontalPanel}">
            <Button Content="Назад" Click="BackButton_Click" Style="{StaticResource ButtonExit}"
                    />
            <Button Content="Зарегистрировать" Click="RegisterButton_Click" Style="{StaticResource ButtonAdd}"
                    />
        </StackPanel>
    </Grid>
</Page>