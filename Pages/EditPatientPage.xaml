<Page x:Class="_7.Pages.EditPatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактирование пациента" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Редактирование пациента" Style="{StaticResource header}"/>
            <TextBlock x:Name="PatientIdText" />
        </StackPanel>

        <StackPanel Grid.Row="1">
            <Label Content="Фамилия:"/>
            <TextBox x:Name="LastNameTextBox"/>

            <Label Content="Имя:"/>
            <TextBox x:Name="NameTextBox"/>

            <Label Content="Отчество:"/>
            <TextBox x:Name="MiddleNameTextBox"/>

            <Label Content="Дата рождения:"/>
            <DatePicker x:Name="BirthdayDatePicker"/>

            <Label Content="Телефон:"/>
            <TextBox x:Name="PhoneTextBox"/>

            <TextBlock x:Name="MessageTextBlock"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Style="{StaticResource HorisontalPanel}">
            <Button Content="Назад" Click="BackButton_Click" Style="{StaticResource ButtonExit}"
                    />
            <Button Content="Сохранить" Click="SaveButton_Click"  Style="{StaticResource ButtonChange}"
                   />
        </StackPanel>
    </Grid>
</Page>