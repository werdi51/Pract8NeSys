<Page x:Class="_7.Pages.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Приём пациента" Height="600" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Приём пациента" FontSize="16"/>
            <TextBlock x:Name="PatientInfoText" FontSize="12"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10" Background="White">
                <Label Content="Новый приём" FontSize="14"/>

                <Label Content="Диагноз:"/>
                <TextBox x:Name="DiagnosisTextBox" Height="60" 
                         TextWrapping="Wrap" AcceptsReturn="True"/>

                <Label Content="Рекомендации:" Margin="0,10,0,0"/>
                <TextBox x:Name="RecommendationsTextBox" Height="100" 
                         TextWrapping="Wrap" AcceptsReturn="True"/>

                <Button Content="Сохранить приём" Click="SaveAppointmentButton_Click"
                        Margin="0,20,0,0" Padding="10,5"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10" Background="White">
                <Label Content="История приёмов" FontSize="14"/>

                <ListView x:Name="AppointmentsListView" Height="400">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Дата: "/>
                                    <TextBlock Text="{Binding date}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Диагноз: "/>
                                    <TextBlock Text="{Binding Diagnosis}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Рекомендации: "/>
                                    <TextBlock Text="{Binding Recomendations}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Врач ID: "/>
                                    <TextBlock Text="{Binding doctor_id}"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <Button Content="Изменить информацию о пациенте" 
                    Click="EditPatientButton_Click" />
            <Button Content="Назад" Click="BackButton_Click" 
                     Margin="10"/>
        </StackPanel>
    </Grid>
</Page>