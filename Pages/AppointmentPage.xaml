<Page x:Class="_7.Pages.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Приём пациента"  >

    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="100"/>
        </Style>

        <Style TargetType="ListView">
            <Setter Property="Height" Value="400"/>
        </Style>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Приём пациента" Style="{StaticResource header}"/>                <!-- -->
            <TextBlock x:Name="PatientInfoText"/>              <!-- -->
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Label Content="Новый приём"/>              <!-- -->

                <Label Content="Диагноз:"/>
                <TextBox x:Name="DiagnosisTextBox"/>         <!-- -->

                <Label Content="Рекомендации:" />              <!-- -->
                <TextBox x:Name="RecommendationsTextBox" />         <!-- -->

                <Button Content="Сохранить приём" Click="SaveAppointmentButton_Click" Style="{StaticResource ButtonAdd}"
                       />                   <!-- -->
            </StackPanel>

            <StackPanel Grid.Column="1">
                <Label Content="История приёмов"/>  <!-- -->

                <ListView x:Name="AppointmentsListView">   <!---->
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <StackPanel Style="{StaticResource HorisontalPanel}">
                                    <TextBlock Text="Дата: "/>
                                    <TextBlock Text="{Binding date}"/>
                                </StackPanel>
                                <StackPanel Style="{StaticResource HorisontalPanel}">
                                    <TextBlock Text="Диагноз: "/>
                                    <TextBlock Text="{Binding Diagnosis}"/>
                                </StackPanel>
                                <StackPanel Style="{StaticResource HorisontalPanel}">
                                    <TextBlock Text="Рекомендации: "/>
                                    <TextBlock Text="{Binding Recomendations}"/>
                                </StackPanel>
                                <StackPanel Style="{StaticResource HorisontalPanel}">
                                    <TextBlock Text="Врач ID: "/>
                                    <TextBlock Text="{Binding doctor_id}"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Style="{StaticResource HorisontalPanel}">
            <Button Content="Изменить информацию о пациенте" 
                    Click="EditPatientButton_Click" Style="{StaticResource ButtonChange}"/>
            <Button Content="Назад" Click="BackButton_Click" Style="{StaticResource ButtonExit}"
                     />      <!-- -->
        </StackPanel>
    </Grid>
</Page>