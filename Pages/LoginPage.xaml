<Page x:Class="_7.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Вход в систему" Height="450" Width="400">

    <Grid Background="#f5f5f5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Margin="20" Background="White" 
                CornerRadius="10" BorderBrush="#e0e0e0" BorderThickness="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <TextBlock Text="Вход в систему" 
                           FontSize="24" FontWeight="Bold" 
                           Margin="30" HorizontalAlignment="Center"/>

                <Label Content="ID врача:"/>
                <TextBox x:Name="IdTextBox" Height="35" 
                         FontSize="14" Padding="5"/>

                <Label Content="Пароль:" />
                <PasswordBox x:Name="PasswordBox"
                             Height="35" FontSize="14" Padding="5"/>

                <Button Content="Войти" Click="LoginButton_Click" 
                        Height="40"  
                        FontSize="14"
                        />

                <TextBlock Text="или" HorizontalAlignment="Center"/>

                <Button Content="Регистрация нового врача" 
                        Click="RegisterButton_Click"
                        Height="35" 
                        FontSize="13"
                        />
            </StackPanel>
        </Border>

    </Grid>
</Page>