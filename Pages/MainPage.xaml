<Page x:Class="_7.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная страница" Height="600" Width="800"
      Background="White"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="White" Grid.ColumnSpan="2">
            <TextBlock Text="{Binding DoctorInfoString}" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button Content="Выйти" Click="LogoutButton_Click" Padding="5"/>
        </StackPanel>

        <Grid Grid.Row="1" Grid.Column="0" Background="White">
            <StackPanel Margin="10">
                <Label Content="Информация о пациенте" FontSize="16"/>

                <StackPanel Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ID: " Width="120"/>
                        <TextBlock Text="{Binding SelectedPatient.Id}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Фамилия: " Width="120"/>
                        <TextBlock Text="{Binding SelectedPatient.LastName}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Имя: " Width="120"/>
                        <TextBlock Text="{Binding SelectedPatient.Name}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Отчество: " Width="120"/>
                        <TextBlock Text="{Binding SelectedPatient.MiddleName}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Дата рождения: " Width="120"/>
                        <TextBlock Text="{Binding SelectedPatient.Birthday}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Телефон: " Width="120"/>
                        <TextBlock Text="{Binding SelectedPatient.PhoneNumber}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="20">
                    <Button Content="Начать прием" 
                            Click="StartAppointmentButton_Click"
                            Margin="10" Width="120"/>
                    <Button Content="Изменить информацию" 
                            Click="EditPatientButton_Click"
                            Padding="10,5" Margin="10" Width="150"/>
                </StackPanel>

                <Label Content="История приёмов" Margin="10"/>

                <ListView ItemsSource="{Binding SelectedPatient.AppointmentStories}" Height="200">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Дата: " />
                                    <TextBlock Text="{Binding date}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Диагноз: " />
                                    <TextBlock Text="{Binding Diagnosis}" TextWrapping="Wrap"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Рекомендации: " />
                                    <TextBlock Text="{Binding Recomendations}" TextWrapping="Wrap"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Врач ID: " />
                                    <TextBlock Text="{Binding doctor_id}"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Grid.Column="1" Margin="10" BorderBrush="#E0E0E0" BorderThickness="1">
            <StackPanel>
                <Label Content="Список пациентов" FontSize="14" HorizontalAlignment="Center" Background="#F5F5F5" Padding="5"/>
                <Button Content="Создать пациента" Click="CreatePatientButton_Click" Margin="5" Padding="5"/>

                <ListView ItemsSource="{Binding Patients}" 
                          SelectedItem="{Binding SelectedPatient}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding LastName}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Name}"/>
                                    <TextBlock Text="{Binding MiddleName}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ID: " Foreground="Gray"/>
                                        <TextBlock Text="{Binding Id}" Foreground="Gray"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Background="LightGray" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Докторов: "/>
                <TextBlock Text="{Binding DoctorsCount}" FontWeight="Bold" Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Пациентов: "/>
                <TextBlock Text="{Binding PatientsCount}" FontWeight="Bold" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>