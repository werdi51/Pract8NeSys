<Page x:Class="_7.Pages.CreatePatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Создание пациента" Height="450" Width="400">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="LightGray" Padding="10">
            <TextBlock Text="Создание нового пациента" FontSize="16"/>
        </Border>
        
        <StackPanel Grid.Row="1" Margin="20">
            <Label Content="Фамилия:"/>
            <TextBox x:Name="LastNameTextBox" Margin="0,0,0,10"/>
            
            <Label Content="Имя:"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>
            
            <Label Content="Отчество:"/>
            <TextBox x:Name="MiddleNameTextBox" Margin="0,0,0,10"/>
            
            <Label Content="Дата рождения:"/>
            <DatePicker x:Name="BirthdayDatePicker" Margin="0,0,0,10"/>
            
            <Label Content="Телефон:"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,0,0,20"/>
            
            <TextBlock x:Name="MessageTextBlock" />
        </StackPanel>
        

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2">
                <Button Content="Назад" Click="BackButton_Click" 
                        Padding="10" Margin="0,0,10,0"/>
                <Button Content="Создать" Click="CreateButton_Click" 
                        Padding="10"/>
            </StackPanel>
   
    </Grid>
</Page>