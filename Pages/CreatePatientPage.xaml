<Page x:Class="_7.Pages.CreatePatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Создание пациента">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Style="{StaticResource BorderElement}">  <!-- -->
            <TextBlock Text="Создание нового пациента" Style="{StaticResource header}"/>  <!-- -->
        </Border>
        
        <StackPanel Grid.Row="1"> <!-- -->
            <Label Content="Фамилия:"/>
            <TextBox x:Name="LastNameTextBox" /> <!-- -->
            
            <Label Content="Имя:"/>
            <TextBox x:Name="NameTextBox" />  <!-- -->
            
            <Label Content="Отчество:"/>
            <TextBox x:Name="MiddleNameTextBox" /> <!-- -->
            
            <Label Content="Дата рождения:"/>
            <DatePicker x:Name="BirthdayDatePicker" /> <!-- -->
            
            <Label Content="Телефон:"/>
            <TextBox x:Name="PhoneTextBox" /> <!-- -->
            
            <TextBlock x:Name="MessageTextBlock" />
        </StackPanel>
        

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2"> <!-- -->
            <Button Content="Назад" Click="BackButton_Click" Style="{StaticResource ButtonExit}"
                        /> <!-- -->
            <Button Content="Создать" Click="CreateButton_Click" Style="{StaticResource ButtonAdd}"
                        /> <!-- -->
            </StackPanel>
   
    </Grid>
</Page>